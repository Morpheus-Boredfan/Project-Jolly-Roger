<<widget "ShipGuardLVL">><<silently>>
   <<if $player lte 10>>
      <<set $shipguardlvl to $playerlvl>>
   <<else>>
      <<set $shipguardlvl = random(1,10)>>
   <</if>>
<</silently>><</widget>>

<<widget "ShipGuardStats">><<silently>>
   <<if $shipguardlvl is 1>>
      <<set $shipguardhp = random(50,150)>>
	  <<set $shipguardstr = random(5,20)>>
	  <<set $shipguarddef to 5>>
      <<set $shipguarddex = random(5,20)>>
   <<elseif $shipguardlvl is 2>>
      <<set $shipguardhp = random(50,160)>>
