<<widget "CityGuardLVL">><<silently>>
   <<if $player lte 10>>
      <<set $cityguardlvl to $playerlvl>>
   <<else>>
      <<set $cityguardlvl = random(1,10)>>
   <</if>>
<</silently>><</widget>>

<<widget "CityGuardStats">><<silently>>
   <<if $cityguardlvl is 1>>
      <<set $cityguardhp = random(50,150)>>
	  <<set $cityguardstr = random(5,20)>>
	  <<set $cityguarddef to 5>>
      <<set $cityguarddex = random(5,20)>>
